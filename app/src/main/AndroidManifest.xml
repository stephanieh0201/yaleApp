<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stephanie.yaleschoolofart" >

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/yale_school_of_art"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalendarActivity"
            android:label="@string/title_activity_calendar" >
        </activity>
        <activity
            android:name=".UndergradActivity"
            android:label="@string/title_activity_undergrad" >
        </activity>
        <activity
            android:name=".ApplicationActivity"
            android:label="@string/title_activity_application" >
        </activity>
    </application>

</manifest>
